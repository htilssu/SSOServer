generator client {
  provider = "prisma-client-js"
  previewFeatures = ["tracing"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Account {
  id       String  @id @default(cuid()) @map("_id")
  email    String  @unique
  password String
  username String? @unique
  user     User    @relation(fields: [userId], references: [id])
  userId   String
}

model User {
  id          String    @id @default(cuid()) @map("_id")
  firstName   String
  lastName    String
  phoneNumber String    @unique
  accountId   String?
  metadata    Json?
  Account     Account[]
}
